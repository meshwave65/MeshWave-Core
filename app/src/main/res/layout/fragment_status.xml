<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".StatusFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Seção de Status Geral -->
        <TextView style="@style/TextAppearance.AppCompat.Title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Status Geral"/>
        <TextView android:id="@+id/text_cpa_origin" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CPA de Origem: Aguardando..."/>
        <TextView android:id="@+id/text_username" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Username: Aguardando..."/>
        <TextView android:id="@+id/text_current_location" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Localização Atual: Aguardando..."/>
        <TextView android:id="@+id/text_wifi_status" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wi-Fi Direct: Aguardando..."/>

        <!-- Seção Meu Cache -->
        <TextView style="@style/TextAppearance.AppCompat.Title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Meu Cache (CPA )"/>
        <TextView android:id="@+id/text_my_cache" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#EEEEEE" android:padding="8dp" android:text="{vazio}" android:typeface="monospace"/>

        <!-- Seção Cache do Parceiro -->
        <TextView style="@style/TextAppearance.AppCompat.Title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Cache do Parceiro"/>
        <TextView android:id="@+id/text_partner_cache" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#EEEEEE" android:padding="8dp" android:text="{desconectado}" android:typeface="monospace"/>

        <!-- Seção Log de Eventos -->
        <TextView style="@style/TextAppearance.AppCompat.Title" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="Log de Eventos"/>
        <TextView android:id="@+id/text_log" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#333333" android:textColor="#FFFFFF" android:padding="8dp" android:maxLines="15" android:scrollbars="vertical" android:text="Iniciando..." android:typeface="monospace"/>

    </LinearLayout>
</ScrollView>
